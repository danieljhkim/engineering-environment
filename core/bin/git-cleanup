#!/usr/bin/env bash
# git-cleanup - Clean up merged git branches
#
# Examples:
#   git-cleanup              # Interactive: show branches and confirm
#   git-cleanup --dry-run    # Show what would be deleted
#   git-cleanup --force      # Delete without confirmation

set -euo pipefail

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m'

show_usage() {
    cat << EOF
Usage: $(basename "$0") [OPTIONS]

Delete local branches that have been merged into the current branch.

Options:
  -n, --dry-run    Show what would be deleted without deleting
  -f, --force      Delete without confirmation
  -h, --help       Show this help

Examples:
  $(basename "$0")           # Interactive mode
  $(basename "$0") --dry-run # Preview deletions
  $(basename "$0") --force   # Delete immediately
EOF
}

DRY_RUN=false
FORCE=false

# Parse arguments
while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            show_usage
            exit 0
            ;;
        -n|--dry-run)
            DRY_RUN=true
            shift
            ;;
        -f|--force)
            FORCE=true
            shift
            ;;
        *)
            echo "Unknown option: $1" >&2
            show_usage
            exit 1
            ;;
    esac
done

# Check if we're in a git repo
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo "${RED}Error: Not a git repository${NC}" >&2
    exit 1
fi

# Get current branch
CURRENT_BRANCH=$(git branch --show-current)
echo "${YELLOW}Current branch: $CURRENT_BRANCH${NC}"
echo ""

# Find merged branches (excluding current, main, master, develop)
MERGED_BRANCHES=$(git branch --merged | \
    grep -v "\*" | \
    grep -v "^\s*main$" | \
    grep -v "^\s*master$" | \
    grep -v "^\s*develop$" | \
    sed 's/^[* ]*//' || true)

if [ -z "$MERGED_BRANCHES" ]; then
    echo "${GREEN}No merged branches to clean up${NC}"
    exit 0
fi

echo "Merged branches:"
echo "$MERGED_BRANCHES" | while IFS= read -r branch; do
    echo "  ${RED}$branch${NC}"
done
echo ""

BRANCH_COUNT=$(echo "$MERGED_BRANCHES" | wc -l | tr -d ' ')
echo "Total: $BRANCH_COUNT branch(es)"
echo ""

if $DRY_RUN; then
    echo "${YELLOW}[DRY RUN] Would delete these branches${NC}"
    exit 0
fi

if ! $FORCE; then
    read -p "Delete these branches? (y/N) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo "Cancelled"
        exit 0
    fi
fi

# Delete branches
echo "$MERGED_BRANCHES" | while IFS= read -r branch; do
    if git branch -d "$branch" 2>/dev/null; then
        echo "${GREEN}✓${NC} Deleted: $branch"
    else
        echo "${RED}✗${NC} Failed to delete: $branch"
    fi
done

echo ""
echo "${GREEN}Cleanup complete${NC}"
